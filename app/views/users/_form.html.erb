
<center>
<table border="1" id='sign_in'>
<tr>
  <h1>Lunch Mob</h1>

<td><%= form_for(@user) do |f| %>
<table>
  <% if @user.errors.any? %>

    <div id="error_explanation">
      <p>There seems to be <%= pluralize(@user.errors.count, "error") %> please try again.</p>

      
       <% @user.errors.full_messages.each do |msg| %>

    <ul>  
      <div class=" error">
      <small><li> <%=   msg  %> </li></small>
     </div> 
  </ul>

       <% end %>
      
    </div>
  <% end %></td>

</tr>
</table>

  <div class="field" id="standardNiceInput">
    <%= f.label :name %><br/>
    <%= f.text_field :name, :placeholder => "Name"  %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br/>
    <%= f.text_field :phone_number,:placeholder => "212-867-5309" %>
  </div>


   <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email,:placeholder => "Email"  %>
  </div>

  </div>
  <div class="actions">
  
    <%= f.submit "join the mob" %>
  </div>
  </table>
<% end %>
<h4><q>No one eats alone...</q></h4>

</center>

